---
import Link from "@/components/ui/link.astro";
import Terminal from "@/components/ui/terminal.astro";
import { homePageConfig } from "@/config/home";
import { Icon } from "astro-icon/components";
---

<section class="px-4 py-24">
  <div class="container mx-auto max-w-4xl text-center">
    <div class="code-text text-muted-foreground mb-4 text-sm">
      {homePageConfig.join.code}
    </div>
    <h2 class="mb-6 text-4xl font-bold">
      {homePageConfig.join.title}
    </h2>
    <p class="text-muted-foreground mx-auto mb-8 max-w-2xl text-xl">
      {homePageConfig.join.description}
    </p>

    <div class="mx-auto max-w-2xl">
      <Terminal title="aplikacja.sh">
        <div class="space-y-2 text-left">
          <div class="text-muted-foreground">
            {homePageConfig.join.terminal.command}
          </div>
          <div class="text-muted-foreground/80 text-sm">
            {homePageConfig.join.terminal.loadingText}
          </div>
          <div class="mt-4 space-y-1 text-sm">
            {
              homePageConfig.join.terminal.requirements.map((req) => (
                <div class="text-muted-foreground">âœ“ {req}</div>
              ))
            }
          </div>
          <div class="border-border/60 mt-4 border-t pt-2">
            <div class="text-muted-foreground">
              {homePageConfig.join.terminal.confirmation}
            </div>
          </div>
        </div>
      </Terminal>
    </div>

    <div class="mt-8">
      <Link href="#">
        <Icon name="lucide:mail" />
        {homePageConfig.join.cta}
      </Link>
    </div>
  </div>
</section>
