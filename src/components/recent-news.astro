---
import { homePageConfig } from "@/config/home";
---

<section id="recent-news" class="px-4 py-24">
  <div class="container mx-auto max-w-6xl">
    <div class="mb-16 text-center">
      <div class="code-text text-muted-foreground mb-4 text-sm">
        {homePageConfig.recentNews.code}
      </div>
      <h2 class="mb-4 text-4xl font-bold">{homePageConfig.recentNews.title}</h2>
      <p class="text-muted-foreground text-xl">
        {homePageConfig.recentNews.description}
      </p>
    </div>

    <div
      class="bg-muted border-border text-muted-foreground rounded-md border p-6"
    >
      {homePageConfig.recentNews.noData}
    </div>
  </div>
</section>
