---
import Link from "@/components/ui/link.astro";
import Title from "@/components/ui/title.astro";
import Section from "@/components/ui/section.astro";
import Terminal from "@/components/ui/terminal.astro";
import { homePageConfig } from "@/config/home";
import Code from "@/components/ui/code.astro";
import Description from "@/components/ui/description.astro";
---

<Section id="hero">
  <div class="grid items-center gap-16 lg:grid-cols-2">
    <div class="space-y-8">
      <div class="space-y-6">
        <Code typingCursor>
          {homePageConfig.hero.code}
        </Code>
        <Title>
          {homePageConfig.hero.title}
        </Title>
        <Description class="max-w-lg leading-relaxed">
          {homePageConfig.hero.description}
        </Description>
      </div>

      <div class="text-muted-foreground flex flex-wrap gap-6 text-sm">
        {
          homePageConfig.hero.stats.map((stat) => (
            <div class="flex items-center gap-2">
              <span>{stat}</span>
            </div>
          ))
        }
      </div>

      <div class="flex gap-4">
        <Link size="lg" href={homePageConfig.hero.cta.primary.href}>
          {homePageConfig.hero.cta.primary.label}
        </Link>
        <Link
          size="lg"
          href={homePageConfig.hero.cta.secondary.href}
          variant="ghost"
        >
          {homePageConfig.hero.cta.secondary.label}
        </Link>
      </div>
    </div>

    <Terminal title={homePageConfig.hero.terminal.title}>
      <div class="space-y-2">
        <Code>
          {homePageConfig.hero.terminal.command}
        </Code>
        <div class="text-muted-foreground/90 text-sm">
          {homePageConfig.hero.terminal.loadingText}
        </div>
        <div class="mt-4 space-y-1">
          {
            homePageConfig.hero.terminal.sections.map((section) => (
              <div class="flex justify-between text-sm">
                <span>{section.name}</span>
                <span class="text-success-contrast">{section.status}</span>
              </div>
            ))
          }
        </div>
        <div class="border-border/70 mt-4 border-t pt-2">
          <span class="text-muted-foreground text-sm">
            {homePageConfig.hero.terminal.footerText}
          </span>
        </div>
      </div>
    </Terminal>
  </div>
</Section>
