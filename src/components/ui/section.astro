---
interface Props {
  id: string;
  variant?: "default" | "muted";
  class?: string;
}

const { id, variant = "default", class: className } = Astro.props;
---

<section
  id={id}
  class:list={[
    "space-y-8 px-4 py-24",
    variant === "muted" && "bg-muted",
    className,
  ]}
>
  <div class="container mx-auto max-w-6xl space-y-16">
    <slot />
  </div>
</section>
