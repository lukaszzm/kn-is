---
import Card from "@/components/ui/card.astro";
import { homePageConfig } from "@/config/home";
---

<section id="sections" class="bg-muted px-4 py-24">
  <div class="container mx-auto max-w-6xl">
    <div class="mb-16 text-center">
      <div class="text-muted-foreground mb-4 font-mono text-sm">
        {homePageConfig.sections.code}
      </div>
      <h2 class="mb-4 text-4xl font-bold">
        {homePageConfig.sections.title}
      </h2>
      <p class="text-muted-foreground mx-auto max-w-3xl text-xl">
        {homePageConfig.sections.description}
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2">
      {homePageConfig.sections.cards.map((card) => <Card {...card} />)}
    </div>
  </div>
</section>
